        var controlling = false;
        var waitingTime = 0;
        var controlMethod = "";
        var afk = false;
        const checkupTime = 1000;
        const stickSize = 240;

        var xy = [0, 0];

        var setXY = function() {
            socket.emit('xy', {
                'xy': xy
            });
        }

        var controlInfo = document.getElementById('controlinfo');


        //add mjpeg stream
        let hostUrl = window.location.hostname;

